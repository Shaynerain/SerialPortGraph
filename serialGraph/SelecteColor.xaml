<Controls:MetroWindow  xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" x:Class="serialGraph.SelecteColor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:serialGraph"
        mc:Ignorable="d"
        Title="SelecteColor" Height="300" Width="300">
    <Grid>
        <ListBox x:Name="ColorsListBox" SelectionChanged="ColorsListBox_SelectionChanged" Height="270">
            <Grid Margin="1">
                <Label Content="#000" HorizontalAlignment="Left"></Label>
                <Grid Width="100" HorizontalAlignment="Right" Background="#000"></Grid>
            </Grid>
        </ListBox>
    </Grid>
</Controls:MetroWindow>
